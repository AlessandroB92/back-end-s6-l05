﻿
@{
    ViewBag.Title = "Index";
}

<h2>Effettua Checkout</h2>

@using (Html.BeginForm("RisultatoCheckout", "Checkout"))
{
    <label for="IdPrenotazione">Effettua il checkout: </label>
    <select name="IdPrenotazione">
        @foreach (var prenotazione in ViewBag.listaPrenotati)
        {
            <option value="@prenotazione.ID">@prenotazione.Cognome @prenotazione.Nome</option>
        }
    </select>
    <button class="btn btn-warning">Checkout</button>
}
